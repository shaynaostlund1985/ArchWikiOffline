<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#FFFFFF">

  <ImageView
		android:layout_weight="1"
		android:layout_width="wrap_content"
    android:layout_height="wrap_content"
		android:layout_gravity="center"
    android:src="@drawable/logo"
		android:contentDescription="@string/app_logo_description" />

  <Spinner
		android:layout_weight="1"
    android:id="@+id/topic_spinner"
    android:layout_height="wrap_content"
    android:layout_width="281dp"
		android:layout_gravity="center"
		android:gravity="center"/>

  <ImageButton
		android:layout_weight="2"
		android:background="@drawable/topic_button"
    android:layout_height="65dp"
  	android:layout_width="281dp"
		android:layout_margin="5dp"
		android:layout_gravity="center"
   	android:onClick="displayPage"/>
	<ImageButton
		android:layout_weight="2"
		android:background="@drawable/search_button"
    android:layout_height="65dp"
   	android:layout_width="281dp"
		android:layout_margin="5dp"
		android:layout_gravity="center"
    android:onClick="searchWiki"/>

	<ImageView
		android:layout_weight="2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
    android:layout_gravity="center"
		android:layout_margin="5dp"
    android:src="@drawable/voa_logo"
    android:contentDescription="@string/company_logo_description"/>
	<ImageView
		android:layout_weight="2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
    android:layout_gravity="center"
    android:src="@drawable/tetractys_productions_logo"
    android:contentDescription="@string/company_logo_description"/>

</LinearLayout>
